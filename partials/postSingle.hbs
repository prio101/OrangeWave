{{#post}}



	<div class="row">
		<div class="col-md-1">
			<a href="{{@blog.url}}" class="btn  btn-default btn-lg">Go Back</a>
		</div>	
	</div>

	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h1 class="head">{{title}}</h1>
		</div>
	</div>


			<div class="container post">
			
			
			<br>
			<blockquote class="single_post_block">
				<i>{{excerpt}}</i>
			</blockquote>
			<br>
				<article class="single_post">
						{{content}}
				</article>
				<hr>
				<div class="author_ghost">
					{{#if author}}
					<img width="80px" height="80px"  src="{{author.image}}" alt="{{author.name}}" />
					<kbd>{{author.name}}</kbd>
					
				{{/if}}	
				</div>
			{{/post}}
			</div>
			<hr class="hr">

			<div class="container">
				<div class="row">
					<div class="col-md-6 col-md-offset-3">
			<div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'miprio101'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
